<div class="page-header">
  <h1>
    Projects
    <a href="/projects/new" class="btn btn-lg btn-success">New Project</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Day</th>
        <th>Description</th>
        <th>Number of volunteers required</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.location.neighborhood %></td>
        <td><%= project.date.day %></td>
        <td><%= project.description %></td>
        <td><%= project.number_of_volunteers_required %></td>
        <td><%= project.organization.created_at %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == project.organization %>
            <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
