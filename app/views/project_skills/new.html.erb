<!-- Validation failure messages -->
<% if @project_skill.errors.any? %>
  <% @project_skill.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Project Skill</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_project_skill" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for project_id -->
      <div class="form-group">
        <label for="project_id" class="control-label">
          Project
        </label>

        <%= select_tag(:project_id, options_from_collection_for_select(Project.all, :id, :name, @project_skill.project_id), :class => "form-control") %>
      </div>

      <!-- Label and input for skill_id -->
      <div class="form-group">
        <label for="skill_id" class="control-label">
          Skill
        </label>

        <%= select_tag(:skill_id, options_from_collection_for_select(Skill.all, :id, :name, @project_skill.skill_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Project Skill
      </button>
      or
      <a href="/project_skills">Cancel</a>
    </form>
  </div>
</div>
