<div class="page-header">
  <h1>
    Project skills
    <a href="/project_skills/new" class="btn btn-lg btn-success">New Project skill</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Project</th>
        <th>Skill</th>
        <th>Actions</th>
      </tr>

      <% @project_skills.each do |project_skill| %>
      <tr>
        <td><%= project_skill.project.name %></td>
        <td><%= project_skill.skill.name %></td>
        <td>
          <a href="/project_skills/<%= project_skill.id %>" class="btn btn-primary">Show</a>
          <a href="/project_skills/<%= project_skill.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project_skill/<%= project_skill.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @project_skills, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
