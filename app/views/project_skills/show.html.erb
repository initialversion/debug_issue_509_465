<div class="page-header">
  <h3>Project Skill #<%= @project_skill.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Project</dt>
      <dd>
        <% if @project_skill.project.present? %>
          <a href="/projects/<%= @project_skill.project_id %>">
            <%= @project_skill.project.name %>
          </a>
        <% end %>
      </dd>

      <dt>Skill</dt>
      <dd>
        <% if @project_skill.skill.present? %>
          <a href="/skills/<%= @project_skill.skill_id %>">
            <%= @project_skill.skill.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/project_skills" class="btn btn-primary">
        Back
      </a>
      <a href="/project_skills/<%= @project_skill.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_project_skill/<%= @project_skill.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
