<!-- Validation failure messages -->
<% if @day.errors.any? %>
  <% @day.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Day</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_day" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for day -->
      <div class="form-group">
        <label for="day" class="control-label">
          Day
        </label>

        <input type="text" id="day" name="day" placeholder="Day" class="form-control" value="<%= @day.day %>">
      </div>

      <button class="btn btn-success">
        Create Day
      </button>
      or
      <a href="/days">Cancel</a>
    </form>
  </div>
</div>
