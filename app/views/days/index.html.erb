<div class="page-header">
  <h1>
    Days
    <a href="/days/new" class="btn btn-lg btn-success">New Day</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "days_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :day, "Day" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='daygteqPicker'>
                  <%= f.text_field :day_gteq, :class => "form-control", :placeholder => "Day greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='daylteqPicker'>
                  <%= f.text_field :day_lteq, :class => "form-control", :placeholder => "Day less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#daygteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#daylteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#daygteqPicker').on("dp.change", function (e) {
                  $('#daylteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#daylteqPicker').on("dp.change", function (e) {
                  $('#daygteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :projects_name_cont, "Project name contains" %>
      <%= f.text_field :projects_name_cont, :class => "form-control", :placeholder => "Project name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/days" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#days_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Day</th>
        <th>Actions</th>
      </tr>

      <% @days.each do |day| %>
      <tr>
        <td><%= day.day %></td>
        <td>
          <a href="/days/<%= day.id %>" class="btn btn-primary">Show</a>
          <a href="/days/<%= day.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_day/<%= day.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @days, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
